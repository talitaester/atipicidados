{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                   
    "rootDir": "./",                    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
"strictNullChecks": true,
  },
  "include": ["src/**/*"],                 
  "exclude": ["node_modules"]               
}
